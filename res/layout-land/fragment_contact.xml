<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#ffff66">
  
    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_weight=".17"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="2dp"
            android:textColor="#000033" 
            android:focusable="false"
            android:text="@string/firstName" />

        <EditText
            android:id="@+id/editText1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:layout_column="1"
            android:layout_marginRight="5dp"
            android:ems="9" 
            android:nextFocusForward="@+id/editText2"
            android:inputType="text"
            android:focusable="true">
        <requestFocus />
        </EditText>
        
        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_weight=".17"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:text="@string/cellPhone" 
 			android:textColor="#000033"
 			android:focusable="false" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_marginLeft="2dp"
            android:ems="9"            
            android:inputType="phone"
            android:focusable="true"
            android:nextFocusForward="@+id/editText5"
            />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_weight=".17"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="2dp"
            android:text="@string/lastName" 
 			android:textColor="#000033"
 			android:focusable="false" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_column="1"
            android:ems="9" 
            android:inputType="text" 
            android:focusable="true"
            android:nextFocusForward="@+id/editText3"
            />
            
        <TextView
            android:id="@+id/textView6"
           	android:layout_width="0dp"
            android:layout_weight=".17"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:text="@string/workPhone" 
 			android:textColor="#000033"
 			android:focusable="false" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_marginLeft="2dp"
            android:ems="9"
            android:inputType="phone"
            android:focusable="true"
            android:nextFocusForward="@+id/editText6"
            />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_weight=".17"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="2dp"
            android:text="@string/email" 
 			android:textColor="#000033"
 			android:focusable="false" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_column="1"
            android:ems="9"
            android:imeOptions="actionNext"
            android:nextFocusForward="@+id/editText4"
            android:inputType="textEmailAddress"
            android:focusable="true"
            />
        
        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_weight=".17"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:text="@string/comment" 
 			android:textColor="#000033"
 			android:focusable="false" />

        <EditText
            android:id="@+id/editText6"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_column="4"
            android:ems="2"
            android:lines="3"
            android:gravity="top|left"
            android:inputType="textMultiLine"
            android:focusable="true"/>

    </TableRow>

</TableLayout>